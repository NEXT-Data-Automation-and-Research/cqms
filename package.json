{
  "name": "migration-project",
  "version": "1.0.0",
  "description": "HTML/JavaScript migration project with local development server",
  "main": "dist/server-commonjs.js",
  "type": "module",
  "scripts": {
    "setup": "node setup-env.js",
    "build:version": "tsc src/utils/version.ts --outDir dist/utils --module ES2020 --target ES2020 --moduleResolution node --esModuleInterop --skipLibCheck && node dist/utils/version.js",
    "build": "npm run build:version && npm run build:css && npm run build:ts && npm run build:server",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./public/styles.css --minify",
    "build:ts": "tsc",
    "build:server": "tsc --project tsconfig.server.json",
    "watch:css": "tailwindcss -i ./src/styles/input.css -o ./public/styles.css --watch",
    "watch:ts": "tsc --watch",
    "watch:server": "tsc --project tsconfig.server.json --watch",
    "dev": "npm run build && concurrently --names \"CSS,TS,SERVER,HTTP\" --prefix-colors \"blue,green,yellow,cyan\" \"npm run watch:css\" \"npm run watch:ts\" \"npm run watch:server\" \"npm run serve:watch\"",
    "serve": "node dist/server-commonjs.js",
    "serve:watch": "nodemon --watch dist/server-commonjs.js dist/server-commonjs.js",
    "start": "npm run build && npm run serve",
    "watch": "npm run dev",
    "apply-rls": "node -r ts-node/register src/scripts/apply-rls-migration.ts || node dist/scripts/apply-rls-migration.js",
    "apply-audit-migrations": "npx tsx src/scripts/apply-audit-reports-migrations.ts",
    "validate:css": "node scripts/css-pattern-validator.js",
    "postinstall": "node setup-env.js || echo 'Setup skipped - .env file may already exist'",
    "docker:build": "docker build -t express-cqms:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t express-cqms:dev .",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:down": "docker-compose down",
    "docker:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:dev": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:restart": "docker-compose restart",
    "docker:rebuild": "docker-compose build --no-cache",
    "docker:rebuild:dev": "docker-compose -f docker-compose.dev.yml build --no-cache"
  },
  "keywords": [
    "html",
    "javascript",
    "typescript",
    "tailwindcss",
    "development",
    "server"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@types/dompurify": "^3.0.5",
    "dompurify": "^3.3.1",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.0",
    "express-rate-limit": "^8.2.1",
    "googleapis": "^144.0.0",
    "helmet": "^8.1.0",
    "loglevel": "^1.9.1",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/loglevel": "^1.5.4",
    "@types/node": "^20.10.0",
    "autoprefixer": "^10.4.16",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "express": "^4.18.2",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "web-push": "^3.6.7"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
