{
  "watch": ["dist/server-commonjs.js"],
  "ext": "js",
  "ignore": ["node_modules", "public", "src"],
  "delay": 2500,
  "exec": "node dist/server-commonjs.js",
  "env": {
    "nodemon": "true"
  },
  "verbose": true,
  "events": {
    "restart": "echo [Nodemon] Restarting server due to file changes..."
  }
}

