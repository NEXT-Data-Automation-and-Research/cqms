{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "declaration": false,
    "sourceMap": true,
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": [
    "src/server-commonjs.ts",
    "src/setup-env.ts",
    "src/utils/logger.ts",
    "src/utils/html-processor.ts"
  ],
  "exclude": [
    "node_modules",
    "public",
    "dist"
  ]
}
