# Server Configuration
PORT=4000
NODE_ENV=development

# Application Configuration
APP_NAME=Migration Project
API_URL=http://localhost:4000

# Database Configuration
# Options: 'supabase', 'postgresql', 'mysql'
# Default: 'supabase'
DATABASE_TYPE=supabase
DATABASE_URL=your_database_connection_string

# Supabase Configuration
# ANON_KEY: Safe to expose to client (used for client-side operations with RLS)
# SERVICE_ROLE_KEY: NEVER expose to client (server-side only, bypasses RLS)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# VAPID Keys for Web Push Notifications
# Generate with: npx web-push generate-vapid-keys
# VAPID_PUBLIC_KEY is safe to expose to client (it's a public key)
# VAPID_PRIVATE_KEY must NEVER be exposed (server-side only)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# Google Calendar API Configuration (for generating Meet links)
# Get these from Google Cloud Console after setting up a service account
# See docs/guides/GOOGLE_MEET_SETUP.md for detailed setup instructions
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
GOOGLE_CALENDAR_ID=primary

# Analytics Configuration
# Enable/disable analytics collection
ANALYTICS_ENABLED=true
# Sampling rate (0.0 to 1.0) - 1.0 = 100% of events, 0.1 = 10% of events
ANALYTICS_SAMPLE_RATE=1.0
# Number of events to batch before sending
ANALYTICS_BATCH_SIZE=10
# Maximum time (ms) to wait before sending batch even if batch_size not reached
ANALYTICS_BATCH_INTERVAL_MS=5000

# Application Performance Monitoring (APM) Configuration
# Enable/disable APM tracking
APM_ENABLED=true
# Threshold (ms) for slow database queries
APM_SLOW_QUERY_THRESHOLD_MS=1000
# Threshold (ms) for slow API endpoints
APM_SLOW_API_THRESHOLD_MS=500
# Enable frontend performance tracking (Web Vitals)
APM_FRONTEND_ENABLED=true
# Enable server performance metrics collection
APM_SERVER_ENABLED=true

# Crashlytics Configuration
# Enable/disable crashlytics/error tracking
CRASHLYTICS_ENABLED=true
# Environment name (development, staging, production)
CRASHLYTICS_ENVIRONMENT=development
# Application release version
CRASHLYTICS_RELEASE_VERSION=1.0.0
# Maximum number of breadcrumbs to store per error
CRASHLYTICS_MAX_BREADCRUMBS=50

# Third-Party Analytics Integrations (Optional)
# Sentry Configuration (for error tracking)
# Get DSN from https://sentry.io
# SENTRY_DSN=your_sentry_dsn
# SENTRY_ENVIRONMENT=production
# SENTRY_RELEASE=1.0.0

# PostHog Configuration (for product analytics)
# Get API key from https://posthog.com
# POSTHOG_API_KEY=your_posthog_api_key
# POSTHOG_HOST=https://app.posthog.com

# New Relic Configuration (for APM)
# Get license key from https://newrelic.com
# NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
# NEW_RELIC_APP_NAME=express-cqms

# Add your environment variables here
# Example:
# DATABASE_URL=your_database_url
# API_KEY=your_api_key
# SECRET_KEY=your_secret_key

